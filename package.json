{
  "name": "stilla",
  "version": "1.1.0",
  "description": "Flexible configuration management system for files and env variables",
  "keywords": [
    "config",
    "configuration",
    "typescript",
    "zod",
    "schema",
    "files",
    "env",
    "environment",
    "json",
    "json5",
    "yaml",
    "toml"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dasprid/stilla.git"
  },
  "homepage": "https://github.com/dasprid/stilla",
  "author": "Ben Scholzen 'DASPRiD' <mail@dasprids.de>",
  "license": "BSD-2-Clause",
  "type": "module",
  "files": [
    "dist/**/*"
  ],
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "c8 tsx --test --experimental-test-module-mocks --no-warnings=ExperimentalWarning",
    "test:ci": "c8 --reporter=lcov tsx --test --experimental-test-module-mocks --no-warnings=ExperimentalWarning",
    "format": "biome format . --write",
    "check": "biome check . --write"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22.15.14",
    "@zod/core": "^0.11.6",
    "c8": "^10.1.3",
    "json5": "^2.2.3",
    "lefthook": "^1.11.12",
    "memfs": "^4.17.1",
    "smol-toml": "^1.3.4",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "yaml": "^2.7.1",
    "zod": "4.0.0-beta.20250505T195954"
  },
  "peerDependencies": {
    "@zod/core": "^0.11.6",
    "json5": "^2.2.3",
    "smol-toml": "^1.3.1",
    "yaml": "^2.7.0"
  },
  "peerDependenciesMeta": {
    "json5": {
      "optional": true
    },
    "smol-toml": {
      "optional": true
    },
    "yaml": {
      "optional": true
    }
  },
  "dependencies": {
    "change-case": "^5.4.4"
  },
  "packageManager": "pnpm@10.8.0+sha512.0e82714d1b5b43c74610193cb20734897c1d00de89d0e18420aebc5977fa13d780a9cb05734624e81ebd81cc876cd464794850641c48b9544326b5622ca29971",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "esbuild",
      "lefthook"
    ]
  }
}
